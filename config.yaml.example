# File di configurazione di esempio per Audiogram Generator
# Copia questo file come 'config.yaml' e personalizzalo secondo le tue esigenze

# URL del feed RSS del podcast (opzionale)
# Esempio: https://pensieriincodice.it/podcast/index.xml
feed_url: https://pensieriincodice.it/podcast/index.xml

# Directory di output per i file generati
# Default: ./output
output_dir: ./output

# Episodi da processare (opzionale)
# Valori possibili:
#   - Numero specifico: 1, 2, 3, ecc.
#   - Lista separata da virgola: "1,3,5"
#   - Tutti gli episodi: "all" o "a"
#   - Ultimo episodio disponibile nel feed: "last"
# Se non specificato, verrà richiesto in modalità interattiva
# Esempi:
#   episode: 142
#   episode: "1,3,5"
#   episode: "all"
#   episode: "last"
episode: null

# Soundbites da generare (opzionale)
# Valori possibili:
#   - Numero specifico: 1, 2, 3, ecc.
#   - Lista separata da virgola: "1,3,5"
#   - Tutti i soundbites: "all" o "a"
# Se non specificato, verrà richiesto in modalità interattiva
# Esempio: soundbites: "all"
# Esempio: soundbites: "1,3"
soundbites: null

# Configurazione colori (opzionale)
# I colori sono specificati come liste RGB [R, G, B] con valori 0-255
colors:
  # Colore principale per header, footer e barre waveform
  primary: [242, 101, 34]      # Arancione
  # Colore di sfondo dell'area centrale
  background: [235, 213, 197]  # Beige
  # Colore del testo
  text: [255, 255, 255]        # Bianco
  # Colore di sfondo della trascrizione
  transcript_bg: [0, 0, 0]     # Nero

# Configurazione formati video (opzionale)
# Puoi personalizzare dimensioni, abilitare/disabilitare formati specifici
formats:
  vertical:
    width: 1080
    height: 1920
    enabled: true
    description: "Verticale 9:16 (Reels, Stories, Shorts, TikTok)"
  square:
    width: 1080
    height: 1080
    enabled: true
    description: "Quadrato 1:1 (Post Instagram, Twitter, Mastodon)"
  horizontal:
    width: 1920
    height: 1080
    enabled: true
    description: "Orizzontale 16:9 (YouTube)"

# Hashtag aggiuntivi per i post social (opzionale)
# Questi hashtag verranno aggiunti a quelli estratti dal feed RSS
# Formato: lista di hashtag senza il simbolo #
hashtags:
  - podcast
  - Pensieriincodice

# Sottotitoli (opzionale)
# Brucia i sottotitoli direttamente sul video
# Default: true
show_subtitles: true

# Copertina da usare per i video (opzionale)
# Se true, quando disponibile verrà usata la copertina specifica dell'episodio
# invece di quella generale del podcast. Default: false
use_episode_cover: false

# Sorgente del titolo mostrato nell'header (opzionale)
# Valori possibili:
#   - auto      -> predefinito: usa titolo episodio se presente, altrimenti titolo podcast
#   - episode   -> forza il titolo dell'episodio
#   - podcast   -> forza il titolo del podcast
#   - soundbite -> usa il titolo del soundbite corrente (fallback a episodio/podcast se vuoto)
#   - none      -> non mostra alcun titolo nell'header
header_title_source: auto

# Etichette della caption (opzionale)
# Personalizza le scritte fisse che compaiono nel file di caption .txt
# Puoi tradurle o modificarle a piacere.
caption_labels:
  # Prefisso prima del numero e del titolo episodio
  # Esempio risultato: "Episodio 42: Titolo"
  episode_prefix: "Episode"
  # Testo prima del link all'episodio completo
  # Esempio: "Ascolta l'episodio completo: https://..."
  listen_full_prefix: "Listen to the full episode"

# Soundbites definiti manualmente (opzionale)
# Utilissimo se il feed del podcast non contiene soundbites (tag <podcast:soundbite>).
# Puoi identificare l'episodio tramite il suo numero (basato sull'ordine nel feed, 1-based)
# o tramite il suo GUID univoco (consigliato).
# manual_soundbites:
#   "142": # Numero episodio (come stringa o intero)
#     - start: 120.5
#       duration: 30.0
#       text: "Un momento molto interessante"
#   "guid-univoco-episodio": # GUID dell'episodio
#     - start: 500
#       duration: 15
#       text: "Altro spezzone"
# Example configuration file for Audiogram Generator
# Copy this file as 'config.yaml' and customize it according to your needs

# Podcast RSS feed URL (optional)
# Example: https://pensieriincodice.it/podcast/index.xml
feed_url: https://pensieriincodice.it/podcast/index.xml

# Output directory for generated files
# Default: ./output
output_dir: ./output

# Episodes to process (optional)
# Possible values:
#   - Specific number: 1, 2, 3, etc.
#   - Comma-separated list: "1,3,5"
#   - All episodes: "all" or "a"
#   - Last episode available in the feed: "last"
# If not specified, it will be requested in interactive mode
# Examples:
#   episode: 142
#   episode: "1,3,5"
#   episode: "all"
#   episode: "last"
episode: null

# Soundbites to generate (optional)
# Possible values:
#   - Specific number: 1, 2, 3, etc.
#   - Comma-separated list: "1,3,5"
#   - All soundbites: "all" or "a"
# If not specified, it will be requested in interactive mode
# Example: soundbites: "all"
# Example: soundbites: "1,3"
soundbites: null

# Color configuration (optional)
# Colors are specified as RGB lists [R, G, B] with values 0-255
colors:
  # Main color for header, footer and waveform bars
  primary: [242, 101, 34]      # Orange
  # Background color of the central area
  background: [235, 213, 197]  # Beige
  # Text color
  text: [255, 255, 255]        # White
  # Transcription background color
  transcript_bg: [0, 0, 0]     # Black

# Video format configuration (optional)
# You can customize dimensions, enable/disable specific formats
formats:
  vertical:
    width: 1080
    height: 1920
    enabled: true
    description: "Vertical 9:16 (Reels, Stories, Shorts, TikTok)"
  square:
    width: 1080
    height: 1080
    enabled: true
    description: "Square 1:1 (Instagram Post, Twitter, Mastodon)"
  horizontal:
    width: 1920
    height: 1080
    enabled: true
    description: "Horizontal 16:9 (YouTube)"

# Additional hashtags for social posts (optional)
# These hashtags will be added to those extracted from the RSS feed
# Format: list of hashtags without the # symbol
hashtags:
  - podcast
  - Pensieriincodice

# Subtitles (optional)
# Burn subtitles directly onto the video
# Default: true
show_subtitles: true

# Cover to use for videos (optional)
# If true, the episode-specific cover will be used when available
# instead of the general podcast cover. Default: false
use_episode_cover: false

# Source of the title shown in the header (optional)
# Possible values:
#   - auto      -> default: use episode title if present, otherwise podcast title
#   - episode   -> force the episode title
#   - podcast   -> force the podcast title
#   - soundbite -> use the current soundbite title (fallback to episode/podcast if empty)
#   - none      -> do not show any title in the header
header_title_source: auto

# Caption labels (optional)
# Customize the fixed text that appears in the .txt caption file
# You can translate or modify them as you wish.
caption_labels:
  # Prefix before the episode number and title
  # Example result: "Episode 42: Title"
  episode_prefix: "Episode"
  # Text before the link to the full episode
  # Example: "Listen to the full episode: https://..."
  listen_full_prefix: "Listen to the full episode"

# Manually defined soundbites (optional)
# Very useful if the podcast feed does not contain soundbites (<podcast:soundbite> tags).
# You can identify the episode by its number (based on feed order, 1-based)
# or by its unique GUID (recommended).
# manual_soundbites:
#   "142": # Episode number (as string or integer)
#     - start: 120.5
#       duration: 30.0
#       text: "A very interesting moment"
#   "episode-unique-guid": # Episode GUID
#     - start: 500
#       duration: 15
#       text: "Another clip"